<Window x:Class="CMLauncher.SteamGuardCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Guard" Width="360" Height="160"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1B1B1B" Foreground="White">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter your Steam Guard code (email or mobile app):" Margin="0,0,0,8"/>
        <TextBox x:Name="CodeBox" Grid.Row="1" Height="30" FontSize="16"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Margin="0,0,8,0" Content="Cancel" Click="Cancel_Click"/>
            <Button Width="90" Background="{DynamicResource AccentBrush}" Foreground="White" BorderThickness="0" Content="OK" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
