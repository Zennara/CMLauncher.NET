<Window x:Class="CMLauncher.SigningInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CastleMiner Launcher" Width="800" Height="450"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Background="#121212" Foreground="White">
    <Grid>
        <!-- Center content placeholder for future images -->
        <Grid>
            <TextBlock Text="CASTLEMINER LAUNCHER" FontSize="28" FontWeight="Bold" Opacity="0.15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <!-- Bottom-right status -->
        <DockPanel LastChildFill="False" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,16,12">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Text on left -->
                <TextBlock x:Name="StatusText" Text="Signing in..." FontSize="12" Margin="0,0,8,0"/>
                <!-- Red progress bar (uses global AccentBrush) -->
                <ProgressBar Width="120" Height="6" IsIndeterminate="True" Minimum="0" Maximum="100"
                             Foreground="{StaticResource AccentBrush}" Background="#2A2A2A"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>